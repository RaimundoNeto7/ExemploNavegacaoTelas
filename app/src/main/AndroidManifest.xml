<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.navegacaotelas">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <!-- TODO #4 Setar o parentActivityName em todas as activities, exceto na MainActivity -->
        <!-- TODO #6 Setar o label em todas as activities, exceto na MainActivity -->
        <activity android:name=".Tela3Activity"
            android:parentActivityName=".MainActivity"
            android:label="@string/nome_tela_3"/>

        <activity android:name=".Tela2Activity"
            android:parentActivityName=".MainActivity"
            android:label="@string/nome_tela_2"/>

        <activity android:name=".Tela1Activity"
            android:parentActivityName=".MainActivity"
            android:label="@string/nome_tela_1"/>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>